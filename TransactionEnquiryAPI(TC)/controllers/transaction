const express = require('express');
const transactionmodel = require('../models/transaction.js');
var router = express.Router();


router.get('/add/:date/:amount/:referencenumber/:outcomecode', async function(req, res, next) {
    var transaction = [];
    const transaction_input = req.params;
    transaction.push(transaction_input);
    transactionmodel.insertOne(transaction_input);
    res.send(transaction); 
});



router.get('/check/:referencenumber', async function(req, res, next) {
    const id = req.params;
    console.log(id.referencenumber);
    const id_list = id.referencenumber.split(",");
    console.log(id_list);
    const transactions = await transactionmodel.getStatus(id_list);
    res.send(transactions); 
});


module.exports = router;
